// 어디에 타입스크립트 파일이 위치하는지 알려줘야함
{
  // include 안에 들어있는 모든 파일을 타입스크립트가 확인한다는 의미
  "include": ["src"],
  "compilerOptions": {
    // outDir는 자바스크립트 파일이 생성될 디렉토리를 지정함
    "outDir": "build",
    "target": "ES6",
    //lib는 자바스크립트 코드가 어디서 동작할 지 알려줌
    "lib": ["ES6"],
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS"
  }
}
